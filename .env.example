# ===================================
# ARCHIVO DE EJEMPLO - CONFIGURACIÓN
# ===================================
# Copia este archivo a .env y ajusta los valores según tu entorno

# BASE DE DATOS
DB_HOST=localhost                    # Para producción: tu-servidor.render.com
DB_NAME=farmacia_elizabeth_local     # Para producción: nombre_db_produccion
DB_USER=postgres                     # Usuario de PostgreSQL
DB_PASSWORD=tu_password_aqui         # Contraseña de PostgreSQL
DB_DIALECT=postgres
DB_PORT=5432

# POOL DE CONEXIONES
DB_POOL_MAX=5
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# JWT
JWT_SECRET=cambia_este_secreto_por_uno_seguro
JWT_EXPIRES_IN=24h

# GOOGLE OAUTH
GOOGLE_CLIENT_ID=tu_google_client_id
GOOGLE_CLIENT_SECRET=tu_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/users/auth/google/callback

# STRIPE
STRIPE_SECRET_KEY=tu_stripe_secret_key

# CLOUDINARY (IMPORTANTE - PARA IMAGENES)
CLOUDINARY_CLOUD_NAME=tu_cloudinary_name
CLOUDINARY_API_KEY=tu_cloudinary_key
CLOUDINARY_API_SECRET=tu_cloudinary_secret
CLOUDINARY_FOLDER=farmacia-elizabeth-dev

# SERVIDOR
PORT=5000
NODE_ENV=development                 # Para producción: production

# ALERTAS
ALERT_DAYS_BEFORE_EXPIRY=30
LOW_STOCK_THRESHOLD=10

# EMAIL
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu_email@gmail.com
EMAIL_PASSWORD=tu_app_password
EMAIL_FROM=noreply@farmaciaelizabeth.com

# CORS
FRONTEND_URL=http://localhost:3000   # Para producción: https://tu-frontend.vercel.app
